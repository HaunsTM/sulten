

{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": [
        "es2019"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "target": "es2019",
      "outDir": "./dist/",
      "paths": {
        "*": [
            "node_modules/*"
        ]
      },
      "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ]
}
  